<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DysonRendement.Parametre"
             Title="Parametre"
             Disappearing="ContentPage_Disappearing">
    <VerticalStackLayout>
        <Picker x:Name="ChoixMusiqueFond" Title="Choisissez la musique de fond" HorizontalOptions="Center"
        ItemsSource="{Binding choixMusique}" SelectedIndexChanged="ChoixMusiqueFond_SelectedIndexChanged"
            />
        <Button x:Name="MuteMusique" Text="Couper la musique" Clicked="MuteMusique_Clicked"
            />
    </VerticalStackLayout>
</ContentPage>