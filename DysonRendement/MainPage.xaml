            <!--            HorizontalOptions="Center" /> -->
            <!--     <Label Text="{Binding GpsModel.Longitude, StringFormat='Longitude : {0}'}" -->
            <!--            HorizontalOptions="Center" /> -->
            <!--     <Label Text="{Binding GpsModel.Altitude, StringFormat='Altitude : {0}'}" -->
            <!--            HorizontalOptions="Center" /> -->
