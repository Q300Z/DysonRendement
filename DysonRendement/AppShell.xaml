<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="DysonRendement.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DysonRendement"
    Shell.FlyoutBehavior="Flyout">
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="Black" HeightRequest="200">
            <Image Aspect="AspectFill"
                   Source="soleil.svg"
                   Opacity="0.6" />
            <Label Text="Dyson Rendement"
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center" FontSize="30" />
        </Grid>
    </Shell.FlyoutHeader>
    <FlyoutItem Title="Accueil" Icon="home.svg">
        <Tab>
            <ShellContent Title="Accueil" Icon="home.svg" ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Musique" Icon="music_note.svg">
        <Tab>
            <ShellContent Title="Musique" Icon="music_note.svg" ContentTemplate="{DataTemplate local:MusicPage}" />
        </Tab>
    </FlyoutItem>


</Shell>